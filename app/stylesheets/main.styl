@import "_normalize"

body
  background-color darken(white, 20%)
  font-family: 'Muli', sans-serif;
  
header
  padding: 20px
  // margin: 20px
  background-color darken(blue, 20%)
  h1
    color: #fff
    font-size: 120px
    a
      color: #fff
  h2
    line-height: 80px
    padding: 0
    color: #fff
    font-size: 70px
    a
      color: #fff

.form
  input
    padding: 10px
    width: 800px
    font-size: 50px
    margin: 0px

#artist_results
  margin-left: 20px

.artisti
  display: inline-block
  height: 40px
  padding: 10px
  background-color: rgba(255,255,255,1)
  border: 2px solid #333
  margin: 2px 2px 2px 2px
  width: 400px
  span
    line-height: 40px
    vertical-align: top
    margin-left: 10px
    display: inline-block
    color: #000
  img
    width: 40px
    height: 40px
  &:hover
    background-color: #000
    span
      color: #fff

#artist_detail  
  width: 800px
  padding: 10px 
  margin: 2px 2px 2px 20px

#album_list  
  width: 800px 

  #loading
    vertical-align: middle
    text-align: center
    margin-left: auto
    margin-right: auto

.album
  text-decoration: none
  display: block
  cursor: pointer
  // height: 140px
  padding: 10px
  background-color: rgba(255,255,255,1)
  border: 2px solid #333
  margin: 2px 2px 2px 20px
  width: 800px
  .inneralbum
    // height: 80px
    h2
      width: 600px
      display: inline-block
      line-height: 30px
      vertical-align: top
      margin-left: 10px
      display: inline-block
      color: #000
    img
      width: 80px
      height: 80px
      background-size: 80px 80px
    &:hover
      image
  &:hover
    background-color: #000
    color: #fff
    a, h2
      color: #fff

#special
  margin-top: 1000px
  height: 1000px
  background-image: url('http://upload.wikimedia.org/wikipedia/commons/f/fd/Western-pack-butter.jpg')
  background-repeat: repeat
  background-size: 200px
  h1
    padding-top: 300px
    font-size: 300px